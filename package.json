{
  "name": "multiverse-arena",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -n server,client \"npm -w server run dev\" \"npm -w client run dev\"",
    "dev:server": "npm -w server run dev",
    "dev:client": "npm -w client run dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
